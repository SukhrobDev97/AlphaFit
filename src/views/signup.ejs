<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<body>
  <div class="auth-container">
    <div class="auth-card auth-card-signup">
      <div class="auth-header">
        <h1 class="auth-title">Admin Signup</h1>
        <p class="auth-subtitle">Create your admin account</p>
      </div>

      <form class="auth-form" onsubmit="return validateSignupForm()" action="/admin/signup" method="POST" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group form-group-half">
            <label for="memberNick" class="form-label">Store / Username</label>
            <input
              type="text"
              id="memberNick"
              name="memberNick"
              class="form-input"
              placeholder="Enter username"
              value=""
              required
              autocomplete="off"
            />
          </div>

          <div class="form-group form-group-half">
            <label for="memberPhone" class="form-label">Phone</label>
            <input
              type="text"
              id="memberPhone"
              name="memberPhone"
              class="form-input"
              placeholder="Enter phone number"
              value=""
              required
              autocomplete="off"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group form-group-half">
            <label for="memberPassword" class="form-label">Password</label>
            <input
              type="password"
              id="memberPassword"
              name="memberPassword"
              class="form-input"
              placeholder="Enter password"
              value=""
              required
              autocomplete="new-password"
            />
          </div>

          <div class="form-group form-group-half">
            <label for="confirmPassword" class="form-label">Repeat Password</label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              class="form-input"
              placeholder="Confirm password"
              value=""
              required
            />
          </div>
        </div>

        <div class="form-section">
          <label class="form-label">Store Image</label>
          <div class="image-upload-section">
            <div class="image-preview-container">
              <img id="imagePreview" class="image-preview" src="/img/running.jpeg" alt="Store image preview" />
            </div>
            <div class="image-upload-controls">
              <div class="file-upload-box">
                <input type="file" id="input-file" class="file-input" name="memberImage" accept="image/jpeg,image/jpg,image/png" />
                <label for="input-file" class="file-upload-label">Choose Image</label>
                <input type="text" class="file-upload-name" value="No file chosen" disabled />
              </div>
              <p class="file-upload-help">
                Please upload store image.<br />
                Only .jpg, .jpeg, or .png formats allowed.
              </p>
            </div>
          </div>
        </div>

        <input type="hidden" name="memberType" value="STORE" />

        <div class="recaptcha-container">
          <div class="g-recaptcha" data-sitekey="6LcqicgrAAAAALsE5k34z5WPfFnDCIcsqf3QvxAq"></div>
        </div>

        <button type="submit" class="auth-button auth-button-primary">Signup</button>
      </form>

      <div class="auth-footer">
        <a href="/admin/login" class="auth-link">Already signed up? Login</a>
      </div>
    </div>
  </div>

  <script src="https://www.google.com/recaptcha/api.js?hl=en" async defer></script>
  <script type="text/javascript" src="/js/signup.js"></script>
</body>

<%- include('includes/footer') %>
