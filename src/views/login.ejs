<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1 class="auth-title">Admin Login</h1>
        <p class="auth-subtitle">Sign in to manage AlphaFit</p>
      </div>

      <form class="auth-form" action="/admin/login" method="POST" autocomplete="off">
        <div class="form-group">
          <label for="memberNick" class="form-label">Username</label>
          <input
            type="text"
            id="memberNick"
            name="memberNick"
            class="form-input"
            placeholder="Enter your username"
            value=""
            required
            autocomplete="off"
          />
        </div>

        <div class="form-group">
          <label for="memberPassword" class="form-label">Password</label>
          <input
            type="password"
            id="memberPassword"
            name="memberPassword"
            class="form-input"
            placeholder="Enter your password"
            value=""
            required
            autocomplete="new-password"
          />
        </div>

        <button type="submit" class="auth-button auth-button-primary">Login</button>
      </form>

      <div class="auth-footer">
        <a href="/admin" class="auth-link">Back to Home</a>
        <span class="auth-divider">â€¢</span>
        <a href="/admin/signup" class="auth-link">Not registered? Sign up</a>
      </div>
    </div>
  </div>
</body>

<%- include('includes/footer') %>
